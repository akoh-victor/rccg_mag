{% extends 'base.html.twig' %}
 {% block style %}
     body{background-color:white}
 {% endblock %}

{% block slider %}
    <div style="height: 360px;">
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                <li data-target="#carousel-example-generic" data-slide-to="1"></li>

            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                <div style="height: 390px" class="item active">
                    <img src="{{ asset('slide.png') }}" alt="REDEEM LOGO" style="height: 390px; width: 650px"/>

                </div>
                <div style="height: 390px" class="item ">
                    <img src="{{ asset('slide.png') }}" alt="REDEEM LOGO" style="height: 390px;width: 650px"  />
                    <div class="carousel-caption">
                        <h1>text onli</h1>
                    </div>
                </div>


            </div>

            <!-- Controls -->
            <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
{% endblock %}


  {% block top %}
      <div class="thumbnail" style="height: 290px;">
          <img src="{{ asset('CH.jpg') }}" alt="REDEEM LOGO" style="height: 260px;" />
      </div>
  {% endblock %}


  {% block ads %}
      <div class="thumbnail" style="height: 290px;">
          <img src="{{ asset('osk.jpg') }}" alt="Ads Space" style="height: 260px;" />
      </div>
  {% endblock %}



{% block badge %}

    {% for key, news in uncategorisedNews %}
        <div class="col-md-3">
            <div style = "height:100px" class="wrapper">

                <a href="/news/{{ news.category.name }}/{{ news.id }}">
                    <div class=" pull-left">
                        <img alt="embeded image" src="{{ asset(' uploads/images/news/'~ news.file) }}"
                             style="padding-right: 15px" width="150px" height="90px"/>
                    </div>
                    <div style="width:auto; color: #161f29;padding-top: 15px; padding-left:  10px">
                        <strong> {{ news.title |title }}</strong>
                    </div>
                </a>

            </div>
        </div>

    {% endfor %}

{% endblock %}



{% block row %}
    {% for  category in categories %}


            <div class="col-md-12">
                <ol class="breadcrumb-line">
                    <li class="active"><a href="/news"> <strong> {{ category.name }} </strong></a></li>
                </ol>
            </div>


            <div class="col-md-12">
                {% for news in category.news  %}
                    <div class="col-md-3">
                        <div style = " margin: 5px; height:100px"  class="thumbnail wrapper">
                            <a href="/news/{{ news.category.name }}/{{ news.id }}">
                                <div class=" pull-left">
                                    <img alt="embeded image" src="{{ asset(' uploads/images/news/'~ news.file) }}"
                                         style="padding-right: 15px" width="150px" height="90px"/>
                                </div>
                                <div style="width:auto; color: #161f29;padding-top: 15px; padding-left:  10px">
                                    <strong> {{ news.title |title }}</strong>
                                </div>
                            </a>

                        </div>
                    </div>
                {% endfor %}

            </div>
    {% endfor %}

{% endblock %}
