<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Redeemed Magazine{% endblock %}</title>
        {% block stylesheets %}     
         <link rel="stylesheet" href="{{ asset('css/app.css') }}">
        
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>  
    <body id="{% block body_id %}{% endblock %}">
    
    {% block header %}
    <header class="navbar navbar-default"> 
		                <div class="navbar-header">		 
                            <a class="navbar-brand" href="{{ path('homepage') }}">
                                <img src="{{ asset('xtekLogo.png') }}"
                                alt="XTECH" width="289" height="63">
                            </a>

                            <button type="button" class="navbar-toggle"
                                    data-toggle="collapse"
                                    data-target=".navbar-collapse">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                        </div>
                        
                         <div class="navbar-collapse collapse">
                            <ul class="nav navbar-nav navbar-right">

                                {% block header_navigation_links %}
                                    <li>
                                        <a href="/admin">
                                            <i class="fa fa-home"></i> Home
                                        </a>
                                    </li>
                                     <li>
                                        <a href="/admin/about">
                                            <i class="fa fa-about"></i> About
                                        </a>
                                    </li>
                                     <li>
                                        <a href="/admin/contact">
                                            <i class="fa fa-contact"></i> Contact Us
                                        </a>
                                    </li>
									 
							 <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" 
                                    role="button" aria-expanded="false"><i class="fa fa-user">
                                    </i> <span class="caret"></span></a>
                                    <ul class="dropdown-menu" role="menu">
                                        
                                            <li><a href={{ path('homepage')}}>Public Site</a></li>
                                             <li><a href="/">Logout</a></li>
                                    </ul>
                                </li>     
								</ul>
							   {% endblock %}
                        </div>
                                
    </header>
   {% endblock %}
   
   
   <div class="container_fluid">
          <div class="row">
          
     <div id="sidebar" class="col-sm-3" >
    {% block sidebarTitle %} {% endblock %}   
    <div class="panel panel-info">
     {% block categories %}
         <ul>
          <li> <a href="/admin/news"> NEWS </a></li>
          <li> <a href="/admin/advert"> ADVERTS </a></li>
          <li> <a href="/admin/notice"> NOTICE </a></li>
          <li> <a href="/admin/testimony"> TESTIMONIES </a></li>
        </ul>
     
     {% endblock %}
      </div> 
       <div class="panel panel-info" >
     {% block subnav %}{% endblock %} 
      </div>
    </div>
    
    <div class="col-sm-5 panel panel-success">
    {% block bodyTitle %}  
    <h2>Manage Site Content</h2>
     {% endblock %}  
     
    {% block bodyContent %}{% endblock %}       
    </div>
    
     <div class="col-sm-4 panel panel-info">
    {% block sideBarRightTitle %}   {% endblock %}  
    {% block sideBarRight %}{% endblock %}       
    </div>  
    
      
      </div>{# end of row #}    
    </div>{# end of con2ainer #}
     
     
 
     {% block footer %}
           <div class= "navbar navbar-default navbar-bottom" >
            <p class="navbar navbar-text"> Solve </p> 
         {% endblock %}
         
      
     
       
       
       
        {% block javascripts %}
        <script src="{{ asset('js/app.js') }}"></script>
        {% endblock %}
    </div>
    </body>
</html>
